    <title>practice section</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./style.css" />
</head>
<body>
    
  <div class="main w-full min-h-screen bg-zinc-900">

     <div class="form p-5">
        <form action="/create" method="post">
            <input  class="block w-full text-white  py-2 px-5 bg-zinc-800" type="text" placeholder="Title goes here" name= "title">
            <textarea class="block w-full text-white  py-2 px-5 mt-2 bg-zinc-800 resize-none"  placeholder="write your task details here" name="details"></textarea>
            <input class="block py-1 px-2 mt-2 bg-blue-800 text-white rounded-ms" type="submit" value="Create Tasks">
        </form>
     </div>

     <div class="tasks  flex gap-3 flex-wrap p-10">
        <% if(files.length > 0) { %>

            <% files.forEach(function (val) { %>
                
                <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800 word-break over">
                    <h1 class="text-white tracking-tighter"> <%= val %> </h1>
                    
                    <div class="flex w-full justify-between align-items-center mt-3">
                        <a href="/file/<%= val %>" class="text-blue-500 d-inline-block "">Read more</a>
                        <a href="/edit/<%= val %>" class="text-zinc-500 d-inline-block float-right">Edit</a>
                    </div>

                </div>
        
            <% }) %> 

       <% } else { %>
        <h3 class="text-zinc-600 ">No task yet.</h3>    
        <% } %>
      

       
